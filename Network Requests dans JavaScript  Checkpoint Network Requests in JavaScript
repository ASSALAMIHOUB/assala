const apiKey = 'TON_CLE_API_ICI'; // Remplace par ta clÃ© API OpenWeatherMap

async function getWeather() {
  const city = document.getElementById('city-input').value;
  const resultDiv = document.getElementById('weather-result');

  if (!city) {
    resultDiv.innerHTML = 'âš ï¸ Entrez une ville valide.';
    return;
  }

  try {
    const response = await fetch(
      `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric&lang=fr`
    );
    const data = await response.json();

    if (data.cod !== 200) {
      resultDiv.innerHTML = `âŒ Ville non trouvÃ©e.`;
      return;
    }

    const temp = data.main.temp;
    const desc = data.weather[0].description;
    const location = data.name;

    resultDiv.innerHTML = `
      ğŸ“ <strong>${location}</strong><br>
      ğŸŒ¡ï¸ TempÃ©rature: ${temp}Â°C<br>
      ğŸŒ¥ï¸ Description: ${desc}
    `;
  } catch (error) {
    resultDiv.innerHTML = 'Erreur lors de la rÃ©cupÃ©ration des donnÃ©es mÃ©tÃ©o.';
    console.error(error);
  }
}
